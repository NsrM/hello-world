class Employee{

    public void newEmployee(int empid,String ename,int esal) throws IOException {

        PrintWriter pw = null;
        try {
            pw = new PrintWriter(new File("/home/naseer/Java/Projects/IntelliJIdeaProjects/src/com/company/employee.csv"));
        } catch (FileNotFoundException e) {
            e.printStackTrace();
        }
        String filepath="/home/naseer/Java/Projects/IntelliJIdeaProjects/src/com/company/employee.csv";
        RandomAccessFile rmfile=null;
        try {
             rmfile = new RandomAccessFile(filepath,"rw");
        } catch (FileNotFoundException e) {
            e.printStackTrace();
        } catch (IOException e) {
            e.printStackTrace();
        }
        try{
            rmfile.seek(rmfile.length());
            System.out.println(rmfile.length());
            System.out.println(rmfile.getFilePointer());
        }
        catch (IOException e) {
            e.printStackTrace();
        }

        StringBuilder sb = new StringBuilder();

        sb.append(empid);
        sb.append(",");
        sb.append(ename);
        sb.append(",");
        sb.append(esal);
        sb.append('\n');
        rmfile.writeBytes(String.valueOf(sb));
        System.out.println(sb);

        //pw.write(sb.toString());
        //pw.close();

    }
